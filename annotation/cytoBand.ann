[linked fields]
hg19=chr, begin, end

[data sources]
anno_type=range
description=Cyto Band
version=hg19_20111216
source_url=ftp://hgdownload.cse.ucsc.edu/goldenPath/hg19/database/cytoBand.txt.gz
direct_url=annoDB/cytoBand-hg19_20111216.DB.gz
source_type=txt

[chr]
index=1
adj=RemoveLeading('chr')
type=chromosome

[begin]
index=2
type=INTEGER
adj=IncreaseBy(1)
comment=start position on chromosome

[end]
index=3
type=INTEGER
comment=end position on chromosome

[name]
index=1,4
adj=lambda x: (x[0][3:] + x[1]) if x[0].startswith('chr') else (x[0] + x[1])
type=VARCHAR(255)
comment=name of cytogenic band

[gieStain]
index=5
type=VARCHAR(255)
comment=giemsa stain results

